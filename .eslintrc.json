{
  "env": {
    "es2021": true,
    "node": true,
    "commonjs": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": [
    "eslint",
    "prettier"
  ],
  "extends": [
    "plugin:eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-debugger": "off",
    "no-console": "off",
    "no-multi-spaces": "warn",
    "no-unused-vars": "warn",
    "indent": [
      "warn",
      2
    ],
    "prettier/prettier": [
      "warn",{
        "endOfLine": "auto",
        "trailingComma": "none",
        "printWidth": 80,
        "tabWidth": 2, 
        "semi": true, 
        "singleQuote": false,
        "bracketSpacing": true
      }
    ]
  }
}
